{
  "name": "backend",
  "version": "1.0.0",
  "description": "Backend server for decoder",
  "main": "index.js",
  "scripts": {
    "build-client": "cd frontend && ng build --prod",
    "client": "cd frontend && ng serve --prod -o",
    "dev-client": "cd frontend && ng serve -o",
    "client-install": "cd frontend && npm install && npm audit fix",
    "server": "node index.js",
    "dev-server": "nodemon index.js",
    "server-install": "npm audit fix",
    "start": "npm run server && npm run client",
    "dev-start": "npm run dev-server && npm run dev-client",
    "install": "npm run client-install && npm run server-install"
  },
  "nodemonConfig": {
    "ignore": [
      "code/"
    ]
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "axios": "^0.21.1",
    "bcrypt": "^5.0.0",
    "body-parser": "^1.19.0",
    "compile-run": "^2.3.4",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "joi": "^17.3.0",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.20",
    "mongoose": "^5.11.13",
    "nodemailer": "^6.4.17",
    "nodemailer-express-handlebars": "^4.0.0",
    "request": "^2.88.2"
  },
  "devDependencies": {
    "@types/nodemailer": "^6.4.0",
    "nodemon": "^2.0.7"
  },
  "homepage": "https://github.com/DhruvGheewala/Decoder#readme"
}
